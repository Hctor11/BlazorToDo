@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<p role="status">Current amount: @IncrementAmount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<button class="btn btn-primary" @onclick="DecrementCount">Los tilines</button>

@code {
    private int currentCount = 0;

    [Parameter] //this is for indicate a parameter for the component, is the props element analogue
    public int IncrementAmount { get; set; } = 1;
    
    private void IncrementCount()
    {
        currentCount += IncrementAmount;
    }

    private void DecrementCount()
    {
        currentCount -= IncrementAmount;
    }
}
